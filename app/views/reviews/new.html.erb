<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Add a new review</h1>

      <%= simple_form_for [@cocktail,@review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
      <%= link_to 'Back to cocktail', cocktail_path(@cocktail) %>
    </div>
  </div>
</div>
