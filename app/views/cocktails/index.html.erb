 <div class="navbar-lewagon navbar-fixed-top">
  <a href="#">
    <img src='<%= image_path 'tea_logo.jpg' %>' class="brand">
  </a>

  <!-- displayed on laptops -->
  <div class="navbar-lewagon-actions d-none d-sm-flex">
    <a href="#" class="navbar-lewagon-link">Ingredients</a>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "navbar-lewagon-link" %>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1>Tea Cocktails</h1>
    <p>Awesome beverages to improve your health</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <div class="card-description">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div


