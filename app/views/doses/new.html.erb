<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Add a new dose</h1>

      <%= simple_form_for [@cocktail,@dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Back to cocktail', cocktail_path(@cocktail) %>
    </div>
  </div>
</div>
